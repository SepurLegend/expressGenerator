    <style>
        table {
            width: 70%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border: 1px solid #ddd;
        }
        /* Warna latar biru untuk baris ganjil */
        tbody tr:nth-child(odd) {
            background-color: rgb(239, 27, 27);
        }
    </style>

    <h1>Prodi</h1>
    <h4>Program Studi</h4>
    <table>
        <thead>
            <tr>
                <th>Prodi</th>
                <th>Fakultas</th>
                <th>Singkatan</th>
            </tr>
        </thead>
        <tbody>
            <% prodi.forEach(data => { %>
                <tr>
                    <td><%= data.prodi %></td>
                    <td><%= data.fakultas %></td>
                    <td><%= data.singkatan %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
